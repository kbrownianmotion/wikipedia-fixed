{
  "manifest_version": 3,
  "name": "Wikipedia Fixed",
  "version": "1.01",
  "author": "Kevin Brown",
  "description": "Improves Wikipedia readability by setting maximum content width.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.wikipedia.org/*",
        "*://*.wikimedia.org/*",
        "*://*.wikiquote.org/*",
        "*://*.wikidata.org/*",
        "*://*.wikibooks.org/*",
        "*://*.wikiversity.org/*",
        "*://*.mediawiki.org/*",
        "*://*.wikisource.org/*",
        "*://*.wikivoyage.org/*",
        "*://*.wikinews.org/*",
        "*://*.wiktionary.org/*"
      ],
      "css": [
        "narrow-style.css"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

   "action": {
     "default_icon": "icons/icon-48.png",
     "default_title": "Wikipedia Fixed"
   },

  "web_accessible_resources": [{
    "resources":["narrow-style.css","wide-style.css", "icons/disabled-48.png"],
    "matches": [
      "*://*.wikipedia.org/*",
      "*://*.wikimedia.org/*",
      "*://*.wikiquote.org/*",
      "*://*.wikidata.org/*",
      "*://*.wikibooks.org/*",
      "*://*.wikiversity.org/*",
      "*://*.mediawiki.org/*",
      "*://*.wikisource.org/*",
      "*://*.wikivoyage.org/*",
      "*://*.wikinews.org/*",
      "*://*.wiktionary.org/*"
    ]
  }]
}